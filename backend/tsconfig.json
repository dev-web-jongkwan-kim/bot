{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true
  },
  "exclude": [
    "scripts/comprehensive-backtest.ts",
    "scripts/monthly-backtest-2025.ts",
    "scripts/monthly-backtest-jul-nov-2025.ts",
    "scripts/optimize-individual-strategies.ts",
    "scripts/optimize-risk-management.ts",
    "scripts/optimize-strategy-combinations.ts"
  ]
}
